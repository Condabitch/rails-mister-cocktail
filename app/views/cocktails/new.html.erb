<div class='container'>
  <div class='row'>
    <div class='col-md-6 mx-auto'>
      <h1>Show me what you got!</h1>
        <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name %>
          <%= @ingredients %>
          <%= f.check_box :ingredients, collection: @ingredients %>
          <%= f.button :submit %>
        <% end %>
      <%= link_to 'Cancel', cocktails_path %>
    </div>
  </div>
</div>
